<h1>Employee: <%= @employee.first_name %> <%= @employee.last_name %></h1><br>

<h2>
  Division: <%= @employee.division.name %><br>
  Project: <%= @employee.project_id %>
</h2>

<form action="/employees/<%= @employee.id %>/edit" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="employee_first_name">First Name</label><br>
  <input id="employee_first_name" name="employee_first_name" type="text"><br>

  <label for="employee_last_name">Last Name</label><br>
  <input id="employee_last_name" name="employee_last_name" type="text"><br>

  <button type="submit">Update Employee</button>
</form>

<form action="/employees/<%= @employee.id %>/delete" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Remove Employee</button>
</form>





<a href="/">Home</a>
