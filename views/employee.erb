<h1>Employee: <%= @employee.first_name %> <%= @employee.last_name %></h1><br>
<% if @employee.division != nil %>
  <h2>Division: <%= @employee.division.name %><br></h2>
<% else %>
  <h2>Division: unassigned</h2>
<%end%>
<h2>Project: <%= @employee.project.name %></h2>

<h3>Update Employee Information</h3>
<form action="/employees/<%= @employee.id %>/edit" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="employee_first_name">First Name</label><br>
  <input id="employee_first_name" name="employee_first_name" type="text"><br>

  <label for="employee_last_name">Last Name</label><br>
  <input id="employee_last_name" name="employee_last_name" type="text"><br>

  <button type="submit">Update Employee</button>
</form>

<form action="/employees/<%= @employee.id %>/delete" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Remove Employee</button>
</form>

<form action="/employees/<%= @employee.id %>/add_project" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="employee_project">Select Project name</label>
  <select id="employee_project" name="employee_project" type='text'>
    <% @projects.each() do |project| %>
      <option value="<%= project.id() %>"> <%= project.name %></option>
  <% end %>
  </select>
  <button type="submit">Select Project</button>
</form>





<a href="/">Home</a>
