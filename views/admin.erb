<div id="projects-form">
  <h2>Create a new project</h2>
  <form action="/projects" method="post">
    <label for="project_name">Project Title</label><br>
    <input id="project_name" name="project_name" type="text"><br>
    <label for="due_date">Due Date</label><br>
    <input id="due_date" name="due_date" type="date"><br>

    <button type="submit">Add this Project</button>
  </form>

</div>

<div id="divisions-form">
  <h2>Add a new division for hire</h2>
  <form action="/divisions" method="post">
    <label for="division_name">Division Title</label><br>
    <input id="division_name" name="division_name" type="text"><br>

    <button type="submit">Add this division</button>
  </form>

</div>
